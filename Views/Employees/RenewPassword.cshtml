@model LabProject.Models.Employee

@{
    ViewData["Title"] = "密碼變更";
}

<div class="bg-img-main">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="card col-md-3 mt-3">
                <div class="card-header bg-success text-white text-center fs-5 fw-bold mt-1 border">
                    @ViewData["Title"]
                </div>
                <div class="card-body text-primary fw-bold ">
                    <form asp-action="RenewPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="text-danger">@ViewData["Error"] @ViewData["Message"] </div>
                        <label asp-for="EmployeeID" class="control-label"></label>
                        <input asp-for="EmployeeID" class="form-control" />
                        <span asp-validation-for="EmployeeID" class="text-danger"></span>
                        <div class="form-group">
                            <label asp-for="password" class="control-label"></label>
                            <input asp-for="password" class="form-control" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-end mt-3">
                            <input type="submit" value="確定變更" class="btn btn-warning" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row fs-5 mt-2">
            <div class="col-md-4"></div>
            <a asp-action="Index" class="col-md-4">回登入首頁</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
