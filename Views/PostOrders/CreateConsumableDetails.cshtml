@model LabProject.Models.ConsumableOrderDetails
@{
    Layout = null;
}

<div class="row">
    <div class="col-md">
        <form asp-action="CreateConsumableDetails" id="reConsumableOrderDetailForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="OrderID" class="control-label" asp-items="ViewBag.OrderID"/>
            </div>
            <div class="form-group">
                <label asp-for="ConsumableID" class="control-label"></label>
                <select asp-for="ConsumableID" class ="form-control" asp-items="ViewBag.ConsumableID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
