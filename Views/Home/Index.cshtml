@model LabProject.Models.Employee

@{
    ViewData["Title"] = "首頁";
    string a;
}
<div class="bgpicture">
    <div class="container pb-3">
        <h1 class="text-white pt-5 pb-4"> 實驗室管理系統 </h1>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="row">
                    <!-- 左邊圖片卡片 -->
                    <div class="col-md-6 g-0">
                        <div class="card h-100 bg-blue-white px-3">
                            <div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade h-100" data-bs-ride="carousel">
                                <div class="carousel-inner h-100">
                                    @for (var i = 15; i < 19; i++)
                                    {
                                         a = i == 15 ? "active" : "";

                                        <div class="carousel-item @a d-flex align-items-center justify-content-center h-100" data-bs-interval="3000">
                                            <img src="/photo/@(i).jpg" class="d-block w-100 rounded" alt="...">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- 右邊卡片 -->
                    <div class="col-md-6 d-flex flex-column g-0">
                        <div class="card flex-fill bg-blue-white d-flex justify-content-center align-items-center">
                            <div class="card-body col-md-6 border rounded my-3 bg-light">   
                                <div class="text-danger fw-bold fs-5 mb-3">@ViewData["Error"]</div>
                                <div class="text-danger fw-bold fs-5 mb-3">@ViewData["False"]</div>
                                <div id="getLoginFrom">
                                    
                                </div>
                            </div>
                        </div>
                        <div class="card flex-fill bg-blue-white text-dark fs-5 fw-bold ps-2">
                            <p class="my-3"><i class="bi bi-droplet-fill text-danger"></i> 最佳解析度1280*960 瀏覽器建議使用IE 10以上版本</p>
                            <p class="mb-3"><i class="bi bi-droplet-fill text-danger"></i> 第一次登入本系統請先進行會員註冊</p>
                            <p class="mb-3"><i class="bi bi-droplet-fill text-danger"></i> 系統操作問題請聯絡本站管理員</p>
                            <p class="mb-3"><i class="bi bi-droplet-fill text-danger"></i> 本站管理員招募中...</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('#getLoginFrom').load(`/Home/Login`, function () {
            // 手動啟用表單驗證
            $.validator.unobtrusive.parse($('#getLoginFrom'));
            // 從 data-* 屬性中提取錯誤訊息並顯示
        });

    </script>
}