@model IEnumerable<LabProject.Models.Categories>

@{
    ViewData["Title"] = "化學品種類管理";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
<table class="table table-striped table-hover border border-1 border-dark">
    <thead class="table-primary text-center border border-1 border-dark fw-bold">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.CategoryID">
                        <input type="hidden" value="@item.CategoryID" />
                                <input type="submit" value="刪除" class="btn btn-danger" onclick="return confirm('請注意!!刪除後無法回復。確定要刪除【@(item.CategoryName)】嗎?')" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>
