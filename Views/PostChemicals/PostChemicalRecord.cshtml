@model LabProject.Models.ChemicalRecords
@{
    Layout = null;
}

<div class="row">
    <div class="col">
        <form asp-action="PostChemicalRecord" id="reChemicalForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-danger text-center fs-5" id="errorMes"></div>
            <div class="form-group">
                <label asp-for="EmployeeID" class="control-label">操作者</label>
                <select asp-for="EmployeeID" class ="form-control" asp-items="ViewBag.EmployeeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChemicalID" class="control-label"></label>
                <select asp-for="ChemicalID" class ="form-control" asp-items="ViewBag.ChemicalID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <sapn class="text-success">(公斤/公升)</sapn>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
