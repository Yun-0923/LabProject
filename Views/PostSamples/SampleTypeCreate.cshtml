@model LabProject.Models.SampleType

@{
    ViewData["Title"] = "SampleTypeCreate";
    Layout = null;
}

<div class="row">
    <div class="col-md">
        <form asp-action="SampleTypeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="TypeName" class="form-control text-center border-0 fs-5 fw-bold" placeholder="新增類型" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <button type="submit" class="btn btn-outline-success btn-sm fw-bold mt-1" onclick="return confirm('確定新增樣本類型嗎?')">
                    <i class="bi bi-check-lg"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
