@model LabProject.Models.Chemicals

@{
    ViewData["Title"] = Model.ChineseName;
    Layout = "_Layout";
}

<h3 class="alert alert-danger text-center text-danger"><strong>確定要刪除 @Html.DisplayFor(model => model.ChineseName) 所有資料嗎?</strong></h3>
<div class="card">
    <div class="card-body">
        <h4>@Html.DisplayFor(model => model.ChineseName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnglishName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CASNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CASNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concentration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Concentration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Stock) 
                <span>@(Model.Unit ? "公斤" : "公升")</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SafetyLevel)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.SafetyLevel) 
                <span>@(Model.Unit ? "公斤" : "公升")</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StorageCondition)
        </dt>
        <dd class = "col-sm-10">
                <span>@(Model.StorageCondition ? "室溫" : "冷藏")</span>
        </dd>
        <dt class = "col-sm-2">
           存放位置
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CabinetName)@Html.DisplayFor(model => model.CabinetNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categories.CategoryID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categories.CategoryName)
        </dd>
    </dl>
    
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ChemicalID" />
            <input type="submit" value="確定刪除" class="btn btn-danger" onclick="return confirm('請注意!!您將會刪除該化學品所有資料，且無法回復。確定要刪除嗎?')" />
        </form>
    </div>
</div>


@await Component.InvokeAsync("VCChemicalRecord", new { Cid = Model.ChemicalID })

<div class="text-end">
    <a asp-action="Index">返回化學品管理首頁</a>
</div>
